/* pages/prize/detail/detail.wxss */

page {
  background: #39f;
  font-family: PingFangSC-Regular;
   overflow: hidden; 
   height: 100%
}

.mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.50);
  position: fixed;
  z-index: 500;
}

.mask-box {
  background: #fff;
  border-radius: 20rpx;
  width: 690rpx;
  height: 820rpx;
  margin: 110rpx auto;
  text-align: center;
}

.mask-box-title {
  font-size: 36rpx;
  color: #2e3033;
  font-weight: 600;
  margin-bottom: 30rpx;
}

.mask-box-paragraph {
  font-size: 30rpx;
  color: #8a9199;
  line-height: 60rpx;
  margin: 0 30rpx 30rpx 60rpx;
  text-align: left;
}

.mask-box-paragraph>view {
  display: inline-block;
  background: #39f;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  margin: 0 10rpx 8rpx -20rpx;
}

.mask-box-tip {
  font-size: 32rpx;
  color: #5c6166;
  margin-top: 100rpx;
}

.mask-box-tip>text {
  color: #39f;
}

.mask-box>image {
  width: 72rpx;
  height: 72rpx;
  margin-top: -22rpx;
  margin-left: 632rpx;
}

.container {
  padding-top: 110rpx;
}

.head-bgimg {
  width: 650rpx;
  height: 40rpx;
  background: url(http://i1.dd-img.com/assets/image/1520825297-e9709368e48e63bd-650w-40h.png) no-repeat;
  background-size: cover;
}

.question-head {
  padding-top: 130rpx;
  position: relative;
  left: 0;
  top: 0;
  background: #fff;
  border-radius: 20rpx;
  width: 690rpx;
  height: 650rpx;
}

.head-rule {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 28rpx;
  color: #8a9199;
}

.head-picimg {
  background-image: radial-gradient(50% 93%, #5a5e62 23%, #2e3033 94%);
  border: 1rpx solid #ccc;
  width: 196rpx;
  height: 196rpx;
  border-radius: 100%;
  position: absolute;
  top: -98rpx;
  left: 50%;
  margin-left: -98rpx; 
  overflow: hidden;
}

.head-picimg-picture {
  width: 100%;
   height: 100%; 
}

.head-text {
  position: absolute;
  height: 54rpx;
  width: 268rpx;
  background: url(http://i1.dd-img.com/assets/image/1520827580-eb741a8f62d7cbab-268w-54h.png) no-repeat;
  left: 210rpx;
  top: 60rpx;
  background-size: cover;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  line-height: 46rpx;
}

.head-title {
  font-size: 36rpx;
  color: #2e3033;
  letter-spacing: 0;
  line-height: 60rpx;
  text-align: center;
  margin-top: 20rpx;
}

.head-foreword {
  font-size: 30rpx;
  color: #8a9199;
  line-height: 50rpx;
  text-align: center;
  height: 108rpx;
  overflow: hidden;
}

.head-foreword text {
  display: inline-block;
    text-align: left;
  padding: 0 50rpx;
}

.head-price {
  font-size: 30rpx;
  color: #f63;
  line-height: 50rpx;
  text-align: center;
  margin-top: 30rpx;
  font-weight: 500;
}

.head-price-old {
  font-size: 48rpx;
  line-height: 60rpx;
  display: block;
}

.head-time-blue, .head-time-pink, .head-time-gray {
  background: #e6f3ff;
  border-radius: 10rpx;
  width: 630rpx;
  height: 260rpx;
  margin: 0 auto;
  margin-top: 40rpx;
}

.head-time-pink {
  background: #ffe6e6;
}

.head-time-gray {
  background: #f8f8f8;
  font-size: 48rpx;
  color: #ccc;
  line-height: 60rpx;
  text-align: center;
}

.head-time-gray text {
  display: block;
}

.head-time-gray-ing {
  padding-top: 70rpx;
}

.head-time-title {
  border-bottom: 1px solid #39f;
  width: 400rpx;
  height: 118rpx;
  font-size: 48rpx;
  color: #39f;
  line-height: 120rpx;
  text-align: center;
  margin: 42rpx 114rpx;
  margin-bottom: 0;
}

.head-time-number {
  font-size: 80rpx;
  color: #39f;
  line-height: 80rpx;
  text-align: center;
  margin-top: 18rpx;
}

.head-time-number-old {
  font-size: 200rpx;
  color: #f63;
  line-height: 200rpx;
  text-align: center;
  width: 240rpx;
  height: 200rpx;
  padding-top: 30rpx;
  margin: 0 auto;
}

.head-data {
  font-size: 32rpx;
  color: #39f;
  text-align: center;
}

.head-bonus {
  margin-top: 40rpx;
  font-size: 48rpx;
  color: #f63;
  line-height: 80rpx;
  text-align: center;
  font-weight: 500;
}

.head-bonus-old {
  display: block;
  font-size: 80rpx;
  margin-top: 10rpx;
}

.head-bonus-have {
  margin-top: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #5c6166;
  line-height: 50rpx;
}

.head-bonus-have text {
  color: #39f;
}

.head-bonus-block {
  display: block;
}

.body {
  width: 100%;
  height: 100%;
  background: #39f;
  padding: 0 30rpx;
  position: fixed;
  z-index: 10;
}

.topic {
  width: 690rpx;
  height: 320rpx;
  margin-top: 110rpx;
  background: url(http://i1.dd-img.com/assets/image/1520825297-e9709368e48e63bd-650w-40h.png) no-repeat top;
  background-size: 650rpx;
  padding-top: 40rpx;
  box-sizing: border-box;
  position: relative;
}

.topic-box {
  width: 690rpx;
  height: 280rpx;
  background: #fff;
  border-radius: 10px;
  font-size: 36rpx;
  color: #2e3033;
  padding: 150rpx 70rpx 0 70rpx;
  box-sizing: border-box;
}

.topic-timer {
  position: absolute;
  top: -60rpx;
  left: 50%;
  margin-left: -100rpx;
  background: #fff;
  border: 2rpx solid #39f;
  width: 196rpx;
  height: 196rpx;
  border-radius: 50%;
  font-size: 80rpx;
  color: #f63;
  text-align: center;
  line-height: 196rpx;
}

.font {
  position: absolute;
  top: -60rpx;
  left: 50%;
  margin-left: -100rpx;
  background: #fff;
  border: 2rpx solid #39f;
  width: 196rpx;
  height: 196rpx;
  border-radius: 50%;
  color: #f63;
  text-align: center;
  line-height: 196rpx;
  font-size: 48rpx;
}

.topic-num {
  width: 260rpx;
  position: absolute;
  top: 96rpx;
  left: 50%;
  margin-left: -130rpx;
  background: url(http://i1.dd-img.com/assets/image/1520824606-1b4b816b2d28048a-268w-54h.png) no-repeat;
  background-size: 260rpx;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  line-height: 48rpx;
}

.topic-count {
  position: absolute;
  top: 60rpx;
  right: 10rpx;
  font-size: 32rpx;
  color: #39f;
}

.none {
  display: none;
}

.option-item-checked {
  position: absolute;
  top: 20rpx;
  left: 0rpx;
  width: 76rpx;
  height: 62rpx;
  margin-left: -30rpx;
}

.option-item {
  width: 690rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
  position: relative;
  padding-left: 40rpx;
  box-sizing: border-box;
}

.option-itemChecked {
  background: #297acc;
  width: 690rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  position: relative;
  padding-left: 40rpx;
  box-sizing: border-box;
  color: #fff;
}

.option-itemRight {
  background: #7ed321 url(http://i1.dd-img.com/assets/image/1520846665-46f00950e7050026-40w-40h.png) no-repeat 614rpx;
  background-size: 32rpx;
  width: 690rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  position: relative;
  padding-left: 40rpx;
  box-sizing: border-box;
  color: #fff;
}

.option-itemError {
  background: #ff4e4e url(http://i1.dd-img.com/assets/image/1520846665-b291e70b411d3b29-40w-40h.png) no-repeat 614rpx;
  background-size: 32rpx;
  width: 690rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  position: relative;
  padding-left: 40rpx;
  box-sizing: border-box;
  color: #fff;
}

.error {
  width: 100%;
  height: 100%;
  position: fixed;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.40);
  top: 0;
  z-index: 100;
  left: 0;
}

.error-box {
  background: #fff;
  width: 604rpx;
  height: 604rpx;
  margin: 216rpx auto;
  text-align: center;
}

.error-box image {
  width: 280rpx;
  height: 280rpx;
  margin: 40rpx 0 20rpx;
}

.error-box view {
  font-size: 36rpx;
  color: #2e3033;
}

.error-box button {
  background: #39f;
  box-shadow: 0 3px 5px 0 rgba(51, 153, 255, 0.30);
  border-radius: 200rpx;
  width: 480rpx;
  height: 88rpx;
  color: #fff;
  margin-top: 40rpx;
}

.white {
  color: #fff;
}
