/* pages/prize/detail/detail.wxss */

page {
    /* background: #39f; */
    font-family: PingFangSC-Regular;
    /* overflow: hidden; *//* height: 100%;  */
}

.askhead {
    background: #39f;
    height: 60rpx;
    padding: 20rpx 30rpx 18rpx 30rpx;
}

.askheadimg {
    height: 60rpx;
    width: 60rpx;
    margin-right: 20rpx;
    border-radius: 100%;
    overflow: hidden;
    float: left;
}

.askheadimg image {
    width: 100%;
    height: auto;
    display: initial;
}

.askheadtxt {
    float: left;
    font-size: 36rpx;
    color: #fff;
    line-height: 60rpx;
}

.askshare {
    float: right;
    font-size: 28rpx;
    color: #cce7ff;
    line-height: 60rpx;
}

.askshare button {
    background: none;
    box-shadow: none;
    border-radius: none;
    border: 1px solid #39f;
    /* position: static; */
    line-height: 60rpx;
    font-size: 28rpx;
    /* width: 480rpx; *//* height: 88rpx;  */
    color: #fff;
    /* margin-top: 40rpx;  */
}

button::after {
    border: none;
}

.askshare image {
    width: 35rpx;
    height: 30rpx;
    float: left;
    margin-right: 10rpx;
    margin-top: 15rpx;
}

.askallnumber {
    background: #fff;
    height: 114rpx;
    border-bottom: 1rpx solid #e6e6e6;
    display: box;
    display: -webkit-box;
    padding-top: 30rpx;
}

.askallnumberlist {
    -webkit-box-flex: 1;
    text-align: center;
}

.askallborder {
    border-right: 1rpx solid #e6e6e6;
    width: 1px;
    height: 42px;
}

.askblack {
    font-size: 48rpx;
    color: #2e3033;
}

.askgray {
    font-size: 24rpx;
    color: #8a9199;
}

.askblue {
    font-size: 48rpx;
    color: #39f;
}

.askmain {
    padding: 0 20rpx;
    background: #f4f4f4;
    /* height: 500rpx; */
    padding-top: 30rpx;
}

.asklist {
    background: #fff;
    box-shadow: 0 3px 6px 0 rgba(0, 0, 0, 0.10);
    border-radius: 20rpx;
    width: 710rpx;
    height: 506rpx;
    margin-top: 30rpx;
    overflow: hidden;
}

.asklist:nth-child(1) {
    margin-top: 0;
}

.asklistimg {
    height: 356rpx;
    overflow: hidden;
    position: relative;
}

.asklistimg image {
    width: 100%;
    /* height: 100%;
    display: block;   */
    margin: 0 auto;
}

.asklisttxt {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 710rpx;
    height: 100rpx;
    padding-top: 40rpx;
    color: #fff;
    z-index: 7;
}

.asklisttxtbg {
    /* width: 100%; */
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 5;
    height: 140rpx;
    opacity: 0.5;
    background-image: linear-gradient(-180deg, rgba(0, 0, 0, 0.00) 0%, #000 100%);
}

.asklisttitle {
    font-size: 36rpx;
    padding: 0 30rpx;
}

.asklistnav {
    font-size: 28rpx;
    padding: 0 30rpx;
}

.asklistlogo {
    position: absolute;
    right: 30rpx;
    top: 0;
    width: 100rpx;
    height: 120rpx;
    overflow: hidden;
}

.asklistlogo image {
    height: 100%;
    display: block;
}

.asklistlogo text {
    position: absolute;
    bottom: 0;
    width: 100%;
    text-align: center;
    font-size: 20rpx;
    color: #fff;
    line-height: 40rpx;
}

.askmoney {
    padding: 20rpx 30rpx 0 30rpx;
}

.askmoneyleft {
    float: left;
}

.askmoneyright {
    float: right;
    line-height: 60rpx;
    text-align: center;
}

.askmoneytitle {
    font-size: 24rpx;
    color: #39f;
    line-height: 40rpx;
}

.askmoneynum {
    font-size: 60rpx;
    color: #39f;
    line-height: 60rpx;
}

.askmoneytime {
    background: #cce7ff;
    border-radius: 200rpx;
    width: 240rpx;
    height: 60rpx;
    font-size: 32rpx;
    color: #39f;
    text-align: center;
}

.askmoneygraybtn {
    color: #8a9199;
    background: #f2f2f2;
    margin-top: 40rpx;
}

.askpasstitle {
    font-size: 24rpx;
    color: #2e3033;
    line-height: 40rpx;
}

.askpassmoneynum {
    font-size: 60rpx;
    color: #2e3033;
    line-height: 60rpx;
}

.askpassnum {
    font-size: 24rpx;
    color: #f63;
    line-height: 40rpx;
}

.askpasstime {
    background: #f63;
    box-shadow: 0 3px 5px 0 rgba(255, 102, 51, 0.30);
    border-radius: 200rpx;
    width: 240rpx;
    height: 60rpx;
    font-size: 32rpx;
    color: #fff;
}

.ask-rule {
    font-size: 24rpx;
    color: #5c6166;
    line-height: 120rpx;
    height: 120rpx;
    margin-left: 10rpx;
    background: url(http://i1.dd-img.com/assets/image/1523865958-8e4db66cef45bb15-30w-30h.png) no-repeat 100rpx;
    background-size: 30rpx 30rpx;
}

.askgetmoneybg {
    height: 88rpx;
}

.askgetmoney {
    background-image: linear-gradient(143deg, #62c9ff 0%, #39f 100%);
    width: 750rpx;
    height: 88rpx;
    line-height: 88rpx;
    position: fixed;
    bottom: 0;
    z-index: 11;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
}

.askgetstart {
    background: #cce7ff;
}

.askpopup {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    z-index: 15;
}

.askpopupbg {
    height: 100%;
    width: 100%;
    background: #000;
    opacity: 0.5;
}

.askpopupmain {
    width: 600rpx;
    height: 208rpx;
    padding-top: 60rpx;
    background: #fff;
    position: absolute;
    left: 50%;
    margin-left: -300rpx;
    top: 400rpx;
    border-radius: 20rpx;
    text-align: center;
}

.askpopuptext {
    font-size: 36rpx;
    color: #5c6166;
}

.askpopupbtn {
    background: #39f;
    box-shadow: 0 6rpx 10rpx 0 rgba(51, 153, 255, 0.30);
    border-radius: 200rpx;
    width: 480rpx;
    height: 88rpx;
    line-height: 88rpx;
    margin: 0 auto;
    margin-top: 40rpx;
    color: #fff;
}

.askmoneyred {
    font-size: 24rpx;
    color: #f63;
    line-height: 40rpx;
    text-align: center;
}

.askmoneytimered {
    font-size: 32rpx;
    color: #f63;
    line-height: 70rpx;
    text-align: center;
}

.askpasstimepink {
    background: #ffe0d6;
    color: #f63;
}
