page {
    height: 100%;
    overflow: hidden;
}

.get_money {
    background: #f8f8f8;
    height: 1200rpx;
    width: 100%;
    padding-top: 40rpx;
}

.get_money_num {
    background: #fff;
    width: 100%;
    height: 88rpx;
    display: flex;
    font-size: 32rpx;
    line-height: 88rpx;
    margin-top: 2rpx;
}

.get_money_num_left {
    color: #2e3033;
    text-align: left;
    width: 200rpx;
    padding-left: 30rpx;
}

.get_money_number_right, .get_money_num_right {
    color: #d0021b;
    text-align: right;
    width: 464rpx;
}

.get_money_number_right input {
    height: 48rpx;
    margin-top: 20rpx;
    line-height: 48rpx;
    text-align: right;
    color: #2e3033;
}

.get_money_text {
    font-size: 28rpx;
    color: #8a9199;
    line-height: 28rpx;
    text-align: left;
    padding-top: 14rpx;
    padding-left: 30rpx;
}
.btn-color,.btn-colorold,.get_money_submit {
    margin-top: 120rpx;
  background:#cce7ff;
    border-radius: 200rpx;
    width: 690rpx;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 32rpx;
    color: #fff;
    position: static;
}
.btn-colorold{

    background-color: #39f;
}

.get_money_two {
    background: #f8f8f8;
    height: 1200rpx;
    width: 100%;
    padding-top: 62rpx;
}

.old_get_money_one {
    height: 100rpx;
    margin-left: 50rpx;
    padding-left: 70rpx;
    background: url(http://i1.dd-img.com/assets/image/1521452933-0f33524a2234e54c-40w-100h.png)no-repeat left;
    background-size: 40rpx 100rpx;
}

.old_get_money_one text {
    color: #d0021b;
}

.old_get_money_two {
    height: 100rpx;
    line-height: 160rpx;
    margin-left: 50rpx;
    padding-left: 70rpx;
    background: url(http://i1.dd-img.com/assets/image/1521452933-4a38d702e6967b40-40w-100h.png)no-repeat left;
    background-size: 40rpx 100rpx;
}

.old_get_money_text {
    font-size: 28rpx;
    color: #8a9199;
    text-align: left;
    padding-left: 120rpx;
    padding-right: 50rpx;
    line-height: 40rpx;
    padding-top: 16rpx;
}
