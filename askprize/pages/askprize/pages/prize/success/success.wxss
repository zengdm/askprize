/* pages/prize/success/success.wxss */

.body {
    width: 100%;
    height: 100%;
    background: #39f;
    position: fixed;
    padding: 20rpx;
    box-sizing: border-box;
    text-align: center;
    font-size: 0;
}

.body>image {
    width: 670rpx;
}

.body-main {
    width: 618rpx;
    margin: 0 auto;
    background: #ffe2b3;
    padding: 0 24rpx;
    box-sizing: border-box;
}

.body-main-box {
    width: 100%;
    background: #fff5e6;
    padding-top: 40rpx;
    box-sizing: border-box;
}

.body-main-box-title {
    width: 380rpx;
    height: 90rpx;
    margin: 0 auto 20rpx;
    font-size: 48rpx;
    color: #fff;
    line-height: 80rpx;
    background: url(http://i1.dd-img.com/assets/image/1520837531-a32c44ade58ebceb-380w-92h.png) no-repeat;
    background-size: 380rpx;
}

.body-main-box-explain {
    font-size: 24rpx;
    color: #5c6166;
    line-height: 40rpx;
}

.body-main-box-user {
    margin: 40rpx auto 20rpx;
}

.body-main-box-user-img {
    width: 108rpx;
    height: 108rpx;
    border-radius: 50%;
    margin: 0 auto;
    background: url(http://i1.dd-img.com/assets/image/1520837531-cd05ccdd685f21f8-108w-112h.png) no-repeat;
    background-size: 104rpx;
    overflow: hidden;
    padding-top: 8rpx;
    box-sizing: border-box;
}

.body-main-box-user-img-box {
    width: 96rpx;
    height: 96rpx;
    margin: 0 auto;
    border-radius: 50%;
    overflow: hidden;
}

.body-main-box-user-img-box image {
    width: 96rpx;
    height: 96rpx;
}

.body-main-box-user-name {
    font-size: 24rpx;
    color: #2e3033;
    line-height: 40rpx;
}

.body-main-box-money {
    font-size: 48rpx;
    color: #f63;
}

.body-main-box-moneyNum {
    font-size: 80rpx;
    color: #f63;
}

.body-main-box-code {
    width: 120rpx;
    height: 120rpx;
    margin: 40rpx 0;
}

.body-main-box-success {
    font-size: 24rpx;
    color: #8a9199;
    line-height: 40rpx;
}

.body-main-box-success text {
    color: #f63;
}

.body-main-box-success:nth-last-of-type(1) {
    padding-bottom: 20rpx;
}

.body-save {
    background: #fff;
    box-shadow: 0 6rpx 10rpx 0 rgba(255, 255, 255, 0.30);
    border-radius: 200rpx;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    margin-top: 16rpx;
    color: #39f;
    font-size: 32rpx;
}

.body-main-box-time {
    width: 380rpx;
    height: 160rpx;
    background: url(http://i1.dd-img.com/assets/image/1521171081-a22a27e09a399bd2-379w-160h.png) no-repeat;
    background-size: cover;
    margin: 0 auto;
    line-height: 160rpx;
    font-size: 100rpx;
    color: #f63;
    text-align: center;
}
