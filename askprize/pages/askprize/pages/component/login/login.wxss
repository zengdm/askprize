/* pages/inc/login/login.wxss */
.phone-box{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top:124rpx;
  background:rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  z-index: 1111121111111111111;
  left: 0; 
}
.phone{
  background:#fff;
  border-radius:12rpx;
  width:660rpx;
  height:480rpx;
  margin: 0 auto;
  position: relative;
}
.phone-input{
  /* height: 380rpx; */
  padding: 0 30rpx;
  box-sizing: border-box;
}
.phone-input-slogan{
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  justify-content:space-between;
   align-items: center; 
   padding: 0 20rpx;
  box-sizing: border-box; 
}
.phone-input-slogan text{
  font-size:28rpx;
  color:#33adff;
}
.phone-input-slogan image{
  width: 36rpx;
}
.phone-input-number{
  position: relative;
  margin-bottom: 20rpx; 
}
.phone-input-number,.phone-input-code{
  width: 596rpx;
  border:1px solid #e6e6e6;
  border-radius:6px;
}
.verify{
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  width: 140rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background:#33adff;
  color: #fff;
  font-size: 28rpx;
  border-radius:200rpx;
  padding:0;
}
.verify::after{
  border: none;
}
.phone-input input{
  width: 400rpx;
  height: 96rpx;
  line-height: 96rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.phone-submit{
  background:#33adff;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 34rpx;
  border-radius:0 0 12rpx 12rpx;
  position: absolute;
  bottom: 0;
}
.border-on{
    border:1px solid #33adff;
}
.red{
  color: #d0011b;
}

