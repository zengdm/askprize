/* pages/prize/mei/mei.wxss */

.body {
  width: 100%;
  height: 100%;
  background: #39f;
  padding: 0 30rpx;
  position: fixed;
  z-index: 10;
}

.topic {
  width: 690rpx;
  height: 320rpx;
  margin-top: 110rpx;
  background: url(http://i1.dd-img.com/assets/image/1520825297-e9709368e48e63bd-650w-40h.png) no-repeat top;
  background-size: 650rpx;
  padding-top: 40rpx;
  box-sizing: border-box;
  position: relative;
}

.topic-box {
  width: 690rpx;
  height: 280rpx;
  background: #fff;
  border-radius: 10px;
  font-size: 36rpx;
  color: #2e3033;
  padding: 150rpx 70rpx 0 70rpx;
  box-sizing: border-box;
}

.topic-timer {
  position: absolute;
  top: -60rpx;
  left: 50%;
  margin-left: -100rpx;
  background: #fff;
  border: 2rpx solid #39f;
  width: 196rpx;
  height: 196rpx;
  border-radius: 50%;
  font-size: 80rpx;
  color: #f63;
  text-align: center;
  line-height: 196rpx;
}
.font{
    position: absolute;
  top: -60rpx;
  left: 50%;
  margin-left: -100rpx;
  background: #fff;
  border: 2rpx solid #39f;
  width: 196rpx;
  height: 196rpx;
  border-radius: 50%;
  color: #f63;
  text-align: center;
  line-height: 196rpx;
  font-size: 48rpx;
}

.topic-num {
  width: 260rpx;
  position: absolute;
  top: 96rpx;
  left: 50%;
  margin-left: -130rpx;
  background: url(http://i1.dd-img.com/assets/image/1520824606-1b4b816b2d28048a-268w-54h.png) no-repeat;
  background-size: 260rpx;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  line-height: 48rpx;
}

.topic-count {
  position: absolute;
  top: 60rpx;
  right: 10rpx;
  font-size: 32rpx;
  color: #39f;
}

.none {
  display: none;
}

.option-item-checked {
  position: absolute;
  top: 20rpx;
  left: 0rpx;
  width: 76rpx;
  height: 62rpx;
  margin-left: -30rpx;
}

.option-item {
  width: 690rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
  position: relative;
  padding-left: 40rpx;
  box-sizing: border-box;
}

.option-itemChecked {
  background: #297acc;
  width: 690rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  position: relative;
  padding-left: 40rpx;
  box-sizing: border-box;
  color: #fff;
}

.option-itemRight {
  background: #7ed321 url(http://i1.dd-img.com/assets/image/1520846665-46f00950e7050026-40w-40h.png) no-repeat 614rpx;
  background-size: 32rpx;
  width: 690rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  position: relative;
  padding-left: 40rpx;
  box-sizing: border-box;
  color: #fff;
}

.option-itemError {
  background: #ff4e4e url(http://i1.dd-img.com/assets/image/1520846665-b291e70b411d3b29-40w-40h.png) no-repeat 614rpx;
  background-size: 32rpx;
  width: 690rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  position: relative;
  padding-left: 40rpx;
  box-sizing: border-box;
  color: #fff;
}

.error {
  width: 100%;
  height: 100%;
  position: fixed;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.40);
  top: 0;
  z-index: 100;
  left: 0;
}

.error-box {
  background: #fff;
  width: 604rpx;
  height: 604rpx;
  margin: 216rpx auto;
  text-align: center;
}

.error-box image {
  width: 280rpx;
  height: 280rpx;
  margin: 40rpx 0 20rpx;
}

.error-box view {
  font-size: 36rpx;
  color: #2e3033;
}

.error-box button {
  background: #39f;
  box-shadow: 0 3px 5px 0 rgba(51, 153, 255, 0.30);
  border-radius: 200rpx;
  width: 480rpx;
  height: 88rpx;
  color: #fff;
  margin-top: 40rpx;
}

.white {
  color: #fff;
}
