/* 体现 */

page {
    background: #39f;
    font-family: PingFangSC-Regular;
}

.container {
    padding-top: 110rpx;
}

.head-bgimg {
    width: 650rpx;
    height: 40rpx;
    background: url(http://i1.dd-img.com/assets/image/1520825297-e9709368e48e63bd-650w-40h.png) no-repeat;
    background-size: cover;
}

.question-head {
    padding-top: 130rpx;
    position: relative;
    left: 0;
    top: 0;
    background: #fff;
    border-radius: 20rpx;
    width: 690rpx;
    height: 650rpx;
}

.head-picimg {
  background-image: radial-gradient(50% 93%, #5a5e62 23%, #2e3033 94%);
  border: 1rpx solid #ccc;
  width: 196rpx;
  height: 196rpx;
  border-radius: 100%;
  position: absolute;
  top: -98rpx;
  left: 50%;
  margin-left: -98rpx; 
  overflow: hidden;
}

.head-picimg-picture {
  width: 100%;
   height: 100%; 
}

.head-text {
    position: absolute;
    height: 54rpx;
    width: 268rpx;
    background: url(http://i1.dd-img.com/assets/image/1520827580-eb741a8f62d7cbab-268w-54h.png) no-repeat;
    left: 210rpx;
    top: 60rpx;
    background-size: cover;
    color: #fff;
    text-align: center;
    font-size: 32rpx;
    line-height: 46rpx;
}

.head-title {
    font-size: 36rpx;
    color: #2e3033;
    letter-spacing: 0;
    line-height: 60rpx;
    text-align: center;
    margin-top: 20rpx;
}

.head-foreword {
    font-size: 30rpx;
    color: #8a9199;
    line-height: 50rpx;
    text-align: center;
}

.head-foreword text {
    display: inline-block;
}

.head-price {
    font-size: 30rpx;
    color: #f63;
    line-height: 50rpx;
    text-align: center;
    margin-top: 30rpx;
    font-weight: 500;
}

.head-price-old {
    font-size: 48rpx;
    line-height: 60rpx;
    display: block;
}

.head-time-blue, .head-time-pink, .head-time-gray {
    background: #e6f3ff;
    border-radius: 10rpx;
    width: 630rpx;
    height: 260rpx;
    margin: 0 auto;
    margin-top: 40rpx;
}

.head-time-pink {
    background: #ffe6e6;
}

.head-time-gray {
    background: #f8f8f8;
    font-size: 48rpx;
    color: #ccc;
    line-height: 60rpx;
    text-align: center;
}

.head-time-gray text {
    display: block;
}

.head-time-gray-ing {
    padding-top: 70rpx;
}

.head-time-title {
    border-bottom: 1px solid #39f;
    width: 400rpx;
    height: 118rpx;
    font-size: 48rpx;
    color: #39f;
    line-height: 120rpx;
    text-align: center;
    margin: 42rpx 114rpx;
    margin-bottom: 0;
}

.head-time-number {
    font-size: 80rpx;
    color: #39f;
    line-height: 80rpx;
    text-align: center;
    margin-top: 18rpx;
}

.head-time-number-old {
    font-size: 200rpx;
    color: #f63;
    line-height: 200rpx;
    text-align: center;
    width: 240rpx;
    height: 200rpx;
    padding-top: 30rpx;
    margin: 0 auto;
}

.head-data {
    font-size: 32rpx;
    color: #39f;
    text-align: center;
}

.head-bonus {
    margin-top: 40rpx;
    font-size: 48rpx;
    color: #f63;
    line-height: 80rpx;
    text-align: center;
    font-weight: 500;
}

.head-bonus-old {
    display: block;
    font-size: 80rpx;
    margin-top: 10rpx;
}

.head-bonus-have {
    margin-top: 80rpx;
    text-align: center;
    font-size: 30rpx;
    color: #5c6166;
    line-height: 50rpx;
}

.head-bonus-have text {
    color: #39f;
}

.head-bonus-block {
    display: block;
}

.pass-text {
    text-align: center;
    font-size: 30rpx;
    color: #169bd5;
    line-height: 80rpx;
}

.pass-btn {
    margin: 0 auto;
    width: 300rpx;
    height: 70rpx;
    font-size: 30rpx;
    background: #169bd5;
    line-height: 70rpx;
    border-radius: 20rpx;
    text-align: center;
    color: #fff;
    margin-top: 70rpx;
}

.pass-openupbg {
    overflow: hidden;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    background: #000;
    opacity: 0.5;
    z-index: 11;
}

.pass-openmain {
    height: 300rpx;
    background: #fff;
    border-radius: 20rpx;
    position: absolute;
    left: 100rpx;
    right: 100rpx;
    top: 400rpx;
    z-index: 13;
}

.pass-opentext {
    font-size: 30rpx;
    text-align: center;
    line-height: 80rpx;
}

.pass-close {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 0;
}

.pass-opendown {
    width: 400rpx;
    height: 400rpx;
    position: absolute;
    top: 200rpx;
    border-radius: 30rpx;
    overflow: hidden;
}

.pass-opendowntext {
    font-size: 200rpx;
    color: #fff;
    line-height: 400rpx;
    width: 100%;
    text-align: center;
    position: absolute;
    z-index: 15;
}

.pass-bottom {
    width: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    height: 80rpx;
    background: #fff;
    line-height: 80rpx;
    text-align: center;
    font-size: 30rpx;
    /* border: 1rpx solid #000; */
}

.pass-bottom text {
    width: 50%;
    text-align: center;
    display: inline-block;
}

.pass-bottom-un {
    background: #c3c3c3;
}

.record-question-head {
    padding-top: 30rpx;
    background: #fff;
    border-radius: 20rpx;
    width: 690rpx;
    height: 750rpx;
}

.record-head-picimg {
    width: 108rpx;
    height: 108rpx;
    border-radius: 100%;
    overflow: hidden;
    margin: 0 auto;
}

.record-head-picimg-picture {
    width: 100%;
    height: 100%;
}

.record-pass-main {
    display: box;
    display: -webkit-box;
    margin-top:80rpx;
}

.record-pass-list {
    -webkit-box-flex: 1;
    text-align: center;
}
.record-pass-btn{
    margin: 0 auto;
    width:600rpx;
    height: 70rpx;
    font-size: 30rpx;
    background: #169bd5;
    line-height: 70rpx;
    border-radius: 20rpx;
    text-align: center;
    color: #fff;
    margin-top: 70rpx;
}
